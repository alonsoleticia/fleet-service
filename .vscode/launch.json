{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug con Nodemon",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "nodemon",
        "program": "${workspaceFolder}/src/app.js", 
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "runtimeArgs": ["--inspect"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  